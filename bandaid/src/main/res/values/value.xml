<?xml version="1.0" encoding="utf-8"?>
<resources>
    <bool name="sb__is_phone">true</bool>
    <bool name="sb__is_swipeable">false</bool>
    <color name="sb__action_bg_color">#1affffff</color>
    <color name="sb__action_text_color">#ffffffff</color>
    <color name="sb__background">#ff323232</color>
    <color name="sb__text_color">#ffffffff</color>
    <dimen name="sb__bg_corner_radius">0dp</dimen>
    <dimen name="sb__max_width">568dp</dimen>
    <dimen name="sb__min_width">288dp</dimen>
    <dimen name="sb__offset">0dp</dimen>
    <dimen name="sb__text_padding_bottom">14dp</dimen>
    <dimen name="sb__text_padding_left">24dp</dimen>
    <dimen name="sb__text_padding_right">24dp</dimen>
    <dimen name="sb__text_padding_top">14dp</dimen>
    <dimen name="sb__text_size">14sp</dimen>

    <style name="Snackbar" />
    <style name="Snackbar.Text">
        <item name="android:paddingBottom">@dimen/sb__text_padding_bottom</item>
        <item name="android:paddingLeft">@dimen/sb__text_padding_left</item>
        <item name="android:paddingTop">@dimen/sb__text_padding_top</item>
        <item name="android:paddingRight">@dimen/sb__text_padding_right</item>
        <item name="android:textSize">@dimen/sb__text_size</item>
        <item name="android:textColor">@color/sb__text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Snackbar.Text.Action">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/sb__action_text_color</item>
        <item name="android:background">@drawable/widget_snackbar_btn_bg</item>
    </style>
</resources>