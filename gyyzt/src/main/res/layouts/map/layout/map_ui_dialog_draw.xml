<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_dialog_layout_bg"
    android:gravity="center">

    <ImageView
        android:id="@+id/ivDrawCircle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@mipmap/draw_circle" />

    <ImageView
        android:id="@+id/ivDrawRect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@mipmap/draw_rect" />

    <ImageView
        android:id="@+id/ivDrawPolygon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@mipmap/draw_polygon" />

</LinearLayout>